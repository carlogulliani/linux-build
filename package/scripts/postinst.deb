#!/bin/bash

set -e

case "$1" in
  abort-upgrade|abort-remove|abort-deconfigure)
    ;;

  configure)
    systemctl enable restore-sound-after-resume
    systemctl enable store-sound-on-suspend
    systemctl enable first-boot
    ;;

  *)
    echo "postinst called with unknown argument \`$1'" >&2
    exit 1
    ;;
esac

exit 0
